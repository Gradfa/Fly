local Players = game:GetService("Players")
local player = Players.LocalPlayer

local FlyModule = loadstring(game:HttpGet("YOUR_RAW_GITHUB_URL_HERE"))()
local fly = FlyModule.new(player)

local FlySpeed = 10
local isFlying = false

PlayerSection:Toggle("Fly", function(isToggled)
    isFlying = isToggled
    if isFlying then
        fly:SetSpeed(FlySpeed)
        fly:Start()
    else
        fly:Stop()
    end
end)

PlayerSection:Slider("Fly Speed", 1, 100, function(value)
    FlySpeed = value
    if isFlying then
        fly:SetSpeed(FlySpeed)
    end
end)
